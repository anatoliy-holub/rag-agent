# LM Studio API (OpenAI-compatible)
LM_STUDIO_BASE_URL=http://localhost:1234/v1
# Chat model: used for /chat/completions (answer generation)
LM_STUDIO_CHAT_MODEL=Qwen2.5-7B-Instruct-GGUF
# Embedding model: must be an embedding-capable model in LM Studio (not a chat-only model).
# If you get "Model is not embedding", load an embedding model in LM Studio and set its name here.
LM_STUDIO_EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=rag_docs

# Server
PORT=3000

# RAG: min similarity to use context (0â€“1; higher = stricter)
# Derived from distance: score = 1 / (1 + distance)
SIMILARITY_THRESHOLD=0.3
